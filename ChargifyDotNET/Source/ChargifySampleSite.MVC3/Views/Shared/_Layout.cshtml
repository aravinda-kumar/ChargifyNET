<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link href="@Url.Content("~/Content/my_layout.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/sys/libs/yaml/code/yaml-focusfix.js")" type="text/javascript"></script>
    @RenderSection("head", false)
</head>

<body>
    <!-- skip link navigation -->
    <ul id="skiplinks">
	    <li><a class="skip" href="#nav">Skip to navigation (Press Enter).</a></li>
	    <li><a class="skip" href="#col3">Skip to main content (Press Enter).</a></li>
    </ul>

    <div class="page_margins">
	    <div class="page">
		        <div id="header" role="banner">
			        <div id="topnav" role="contentinfo">
				        <span>
				            @Html.Partial("_LogOnPartial")
				        </span> </div>
				        <h1>Demo Company</h1>
				        <span>An ASP MVC3 <a href="http://www.chargify.com">Chargify</a> Demo</span>
			        </div>
		        <!-- begin: main navigation #nav -->
		        <div id="nav" role="navigation">
                    @RenderSection("menu")
		        </div>
		        <!-- end: main navigation -->
		        <!-- begin: main content area #main -->
		        <div id="main">
			        <!-- begin: #col1 - first float column -->
			        <div id="col1" role="complementary">
				        <div id="col1_content" class="clearfix">
                            @RenderSection("leftContent", false)
				        </div>
			        </div>
			        <!-- end: #col1 -->
			        <!-- begin: #col3 static column -->
			        <div id="col3" role="main">
				        <div id="col3_content" class="clearfix">
                            @RenderBody()
                        </div>
				        <div id="ie_clearing">&nbsp;</div>
				        <!-- End: IE Column Clearing -->
			        </div>
			        <!-- end: #col3 -->
		        </div>
		        <!-- end: #main -->
		        <!-- begin: #footer -->
		        <div id="footer" role="contentinfo">
			        &copy; 2010-2011 Kori Francis
		        </div>
		        <!-- end: #footer -->
		    </form>
	    </div>
    </div>
    <!-- full skip link functionality in webkit browsers -->
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-12491356-3']);
        _gaq.push(['_trackPageview']);
        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(ga);
        })();
    </script>
</body>
</html>
